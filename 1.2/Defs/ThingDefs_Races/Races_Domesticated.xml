<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- ========================== Quail ================================= -->

  <ThingDef ParentName="AnimalThingBase">
    <defName>TS_Quail</defName>
    <label>quail</label>
    <description>A farm bird significantly smaller than a chicken, raised for its high-quality eggs and meat. While it grows fast, it has demanding dietary needs.</description>
    <statBases>
      <MoveSpeed>2.1</MoveSpeed>
      <MarketValue>75</MarketValue>
      <LeatherAmount>0</LeatherAmount>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
    </statBases>
    <tools>
      <li>
        <label>claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>1.5</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
      </li>
      <li>
        <label>beak</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>2.5</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>0.5</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggUnfertilizedDef>TS_EggQuailUnfertilized</eggUnfertilizedDef>
        <eggFertilizedDef>TS_EggQuailFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>2</eggLayIntervalDays>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <race>
      <body>Bird</body>
      <baseHungerRate>0.35</baseHungerRate>
      <baseBodySize>0.15</baseBodySize>
      <baseHealthScale>0.35</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <trainability>None</trainability>
      <wildness>0</wildness>
      <manhunterOnTameFailChance>0</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0</manhunterOnDamageChance>
      <mateMtbHours>8</mateMtbHours>
      <lifeExpectancy>6</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBabyTiny</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Chick_Call</soundWounded>
          <soundDeath>Pawn_Chick_Call</soundDeath>
          <soundCall>Pawn_Chick_Call</soundCall>
          <soundAngry>Pawn_Chick_Call</soundAngry>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.12</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.3</minAge>
          <soundWounded>Pawn_Chicken_Wounded</soundWounded>
          <soundDeath>Pawn_Chicken_Death</soundDeath>
          <soundCall>TS_Pawn_Quail_Call</soundCall>
          <soundAngry>Pawn_Chicken_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalCommon</li>
      <li>AnimalFarm</li>
    </tradeTags>
  </ThingDef>

